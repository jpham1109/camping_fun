<h1> Add a new Sign up! </h1>

<%= form_for @sign_up do |f| %>
    <%= f.label :time, "Time of the activity (hour)" %>
    <%= f.number_field :time %><br/>
    <%= f.label :camper_id %>
    <%= f.collection_select :camper_id, @campers, :id, :name %><br/>

    <%= f.label :activity_id %>
    <%= f.collection_select :activity_id, @activities, :id, :name %><br/>

    <%= f.submit "Submit" %>
<% end %>